@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>影片列表</h2>
<table class="table	table-bordered	table-hover">
    <tr>
        <td><b>影片名稱</b></td>
    </tr>
    @if (Model.Count != 0)
    {
        foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>目前尚無客戶</td>
        </tr>
    }

</table>

